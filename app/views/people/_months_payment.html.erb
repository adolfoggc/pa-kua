<div class="col-md-4">

  <!-- Profile Image -->
  <div class="card card-primary card-outline">
    <div class="card-body box-profile">
      <h3 class="profile-username text-center">Pagamentos do Ano</h3>

      <p class="text-muted text-center"><b><%= @today.year %></b></p>
      <% @months_and_status.each do |month, status|%>
        <% if %w[jan abr jul out].include?(month.to_s)%>
          <div class="row">
        <% end %>
        <div class="col-4 month-slot text-center">
          <% if status.has_key?(:id) %>
            <%= link_to payment_path(status[:id]), class: "col-12 month #{status[:style]}", style: "display: block" do %>
              <%= month.to_s.upcase %>
            <% end %>
          <% else %>
            <div class="col-12 text-center month <%= status[:style] %>">
              <%= month.to_s.upcase %>
            </div>
          <% end %>
        </div>
        <% if %w[mar jun set dez].include?(month.to_s)%>
          </div>
        <% end %>
      <% end %>
      

    </div>
  </div>
</div>

<style>
  .month {
    padding: 5px 0;
    margin: 10px 0;
  }
</style>