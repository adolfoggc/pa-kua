<div class="col-md-4">

  <!-- Profile Image -->
  <div class="card card-primary card-outline">
    <div class="card-body box-profile">
      <h3 class="profile-username text-center">Pagamentos do Ano</h3>

      <p class="text-muted text-center"><b><%= @today.year %></b></p>
      <% @months_and_status.each do |month, status|%>
        <% if %w[jan abr jul out].include?(month.to_s)%>
          <div class="row">
        <% end %>
        <div class="col-4 text-center month <%= status[:style] %>">
          <%= month.to_s.upcase %>
        </div>
        <% if %w[mar jun set dez].include?(month.to_s)%>
          </div>
        <% end %>
      <% end %>
      

    </div>
  </div>
</div>

<style>
  .month {
    padding-top: 5px;
    padding-bottom: 5px;
    margin-top: 10px;
    margin-bottom: 10px;
  }
</style>