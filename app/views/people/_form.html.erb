<%= form_with(model: person, local: true) do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address, 'Endereço' %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :birthdate, 'Nascimento' %>
    <%= form.date_select :birthdate %>
  </div>

  <div class="field">
    <%= form.label :phone, 'Celular' %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :cpf, 'CPF' %>
    <%= form.text_field :cpf %>
  </div>

  <div class="field">
    <%= form.label :role, 'Atuação' %>
    <%= form.select(:role, options_for_select(@roles.map { |k, v| [k.to_s.humanize, Person.roles.key(v)]}) ) %>
  </div>

  <div class="field">
    <%= form.label :start_date, 'Entrada na Escola' %>
    <%= form.date_select :start_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
