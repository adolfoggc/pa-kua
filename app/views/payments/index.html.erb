<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Student plan</th>
      <th>Paid</th>
      <th>Payment fee</th>
      <th>Due date</th>
      <th>Payment link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.student_plan_id %></td>
        <td><%= payment.paid %></td>
        <td><%= payment.payment_fee %></td>
        <td><%= payment.due_date %></td>
        <td><%= payment.payment_link %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

