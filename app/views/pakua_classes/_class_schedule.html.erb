<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- /.card -->
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Hor√°rio das Turmas</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body p-0">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th class="text-center"></th>
                  <% PakuaClass.day_of_weeks.keys.each do |day_of_week| %>
                    <th class="text-center"><%= day_of_week_name(day_of_week) %></th>
                  <% end %>
                </tr>
              </thead>
              <tbody>
                <% @class_schedule.each do |duration, week| %>
                  <tr>
                    <td class="text-center"><%= duration %></td>
                    <% week.each do |day_of_week, class_info| %>
                      <td class="text-center">
                        <% class_info.each do |pkc| %>
                          <div class="row py-2">
                            <div class="col-12">
                              <div class="row">
                                <div class="col-12">
                                  <%= modality_name(pkc[:modality]) unless pkc.blank? %>
                                </div>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody> 
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
</section>
<br>

<style>
  th, td {
    border: 1px solid #999;
    border-collapse: collapse;
  }
</style>