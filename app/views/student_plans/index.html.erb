<p id="notice"><%= notice %></p>

<h1>Student Plans</h1>

<table>
  <thead>
    <tr>
      <th>People</th>
      <th>Tuition fee</th>
      <th>Discount</th>
      <th>Rent inclusion</th>
      <th>Due day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_plans.each do |student_plan| %>
      <tr>
        <td><%= student_plan.people_id %></td>
        <td><%= student_plan.tuition_fee_id %></td>
        <td><%= student_plan.discount_id %></td>
        <td><%= student_plan.rent_inclusion %></td>
        <td><%= student_plan.due_day %></td>
        <td><%= link_to 'Show', student_plan %></td>
        <td><%= link_to 'Edit', edit_student_plan_path(student_plan) %></td>
        <td><%= link_to 'Destroy', student_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student Plan', new_student_plan_path %>
